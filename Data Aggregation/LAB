SELECT                        ----> Departments Info by ID - group by only with department_id
	department_id,
	COUNT(department_id)
FROM
	employees
GROUP BY department_id
ORDER BY department_id

--------------------------------------------------------------------------------------------------------

SELECT							----> Departments Info (by salary)
	department_id,
	COUNT(salary) AS employee_count
FROM
	employees
GROUP BY department_id
ORDER BY department_id


--------------------------------------------------------------------------------------------------------

